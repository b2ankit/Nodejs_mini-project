<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
      .form_temp {
          margin-top: 50px;
          text-align: center;
       }
    </style>
  </head>
  <body>
  <div class="container" style="margin-top: 50px; padding: 30px;">
    <div class="row">
      <div>
        <h3 style="text-align: center; font-weight: 700; text-decoration: underline; margin-bottom: 20px;">Enter Details to Filter</h3>
      </div>
      <div class = "col-sm-2"></div>
      <form class="form-inline" action="/search" method="post">

        <div class="form-group">
          <label for="name">Name:</label>
          <input type="text" class="form-control" id="name" placeholder="Enter name" name="name">
        </div>

        <div class="form-group">
          <label for="age">Age:</label>
          <input type="Number" class="form-control" id="age" placeholder="Enter age" name="age">
        </div>
        
        <div class="form-group">
          <label for="email">Email:</label>
          <input type="email" class="form-control" id="email" placeholder="Enter email" name="email">
        </div>
          
        <button type="submit" class="btn btn-default">Search</button>
      </form>
    </div>
  </div>

 <div class ="container" style="margin-top: 50px;">
   <div class = "row">
    <h3 style="text-align: center; font-weight: 700; text-decoration: underline ;">Student records</h3>
     <div class = "col-sm-2"></div>
     <div class = "col-sm-8" >
        <table class="table table-hover table-bordered table-striped">
          <thead>
            <tr style="background-color: rgb(145, 146, 146);">
              <th style="text-align: center;">Name</th>
              <th style="text-align: center;">Age</th>
              <th style="text-align: center;">Email</th>
              <th style="text-align: center;">Address</th>
              <th style="text-align: center;">Roll no</th>
              <th style="text-align: center;">Delete/Update</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% records.forEach(function(row){%>
                <td style="text-align: center;"><%= row.name%></td>
                <td style="text-align: center;"><%= row.age%></td>
                <td style="text-align: center;"><%= row.email%></td>
                <td style="text-align: center;"><%= row.address%></td>
                <td style="text-align: center;"><%= row.roll%></td>
                <td style="text-align: center;"><a class="btn btn-primary btn-xs" href="/edit/<%= row._id %>"><i class="fa fa-edit"></i></a>
                  <a class="btn btn-danger btn-xs" href="/delete/<%= row._id %>"><i class="fa fa-trash"></i></a></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
</div>

<div class="container" style=" margin-top : 50px; padding :20px;">
  <div class="row" class = "form_temp" >
    <div class = "col-sm-3"></div>
    <div class = "col-sm-6" style="background-color: whitesmoke; padding-top:5px;padding-bottom: 50px; padding-left: 50px;padding-right: 50px;">
     <h3 style="text-align: center; font-weight: 700; text-decoration: underline ;">Inserting Student records</h3>
    <form action="/" method="post">
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" placeholder="Enter name" name="name">
      </div>

      <div class="form-group">
        <label for="age">Age:</label>
        <input type="number" class="form-control" id="age" placeholder="Enter Age" name="age">
      </div>

      <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" class="form-control" id="email" placeholder="Enter email" name="email">
      </div>

      <div class="form-group">
        <label for="address">Address:</label>
        <input type="text" class="form-control" id="address" placeholder="Enter Address" name="address">
      </div>

      <div class="form-group">
        <label for="roll">Roll No:</label>
        <input type="number" class="form-control" id="roll" placeholder="Enter Roll no" name="roll">
      </div>
      
      <button type="submit" class="btn btn-default">Add</button>
    </form>
    
    </div>
  </div>
</div>

  </body>
</html>
